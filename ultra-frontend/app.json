{
  "expo": {
    "name": "Ultra Ticketing",
    "slug": "ultra-ticketing",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ultratickets.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication",
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for tickets",
        "NSLocationWhenInUseUsageDescription": "This app uses location to find nearby events"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.ultratickets.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-local-authentication",
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ]
    ],
    "scheme": "ultra-ticketing",
    "extra": {
      "eas": {
        "projectId": "ultra-ticketing-mvp"
      }
    }
  }
}
